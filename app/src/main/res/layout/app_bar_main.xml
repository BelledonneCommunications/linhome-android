<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <data>
        <import type="android.view.View"/>
        <variable name="viewmodel" type="org.lindoor.ui.toolbar.ToolbarViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:contentInsetStart="0dp"
                android:contentInsetLeft="0dp"
                app:contentInsetLeft="0dp"
                app:contentInsetStart="0dp"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/toolbar_burger_button"
                        android:layout_width="43dp"
                        android:layout_height="43dp"
                        android:padding="10dp"
                        android:scaleType="centerInside"
                        android:layout_marginStart="9dp"
                        android:src="@drawable/ic_lindoor_icon"
                        android:background="@color/transparent"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true"
                        android:visibility='@{viewmodel.visibility(viewmodel.burgerButtonVisible)}'
                        selection_effect='@{"primary_color"}'
                        src='@{"icons/burger_menu"}'/>

                    <ImageButton
                        android:id="@+id/toolbar_back_button"
                        android:layout_width="43dp"
                        android:layout_height="43dp"
                        android:padding="10dp"
                        android:scaleType="centerInside"
                        android:layout_marginStart="9dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_lindoor_icon"
                        android:background="@color/transparent"
                        android:visibility='@{viewmodel.visibility(viewmodel.backButtonVisible)}'
                        android:layout_alignParentStart="true"
                        selection_effect='@{"primary_color"}'
                        src='@{"icons/back"}'/>

                    <RelativeLayout
                        android:layout_width="60dp"
                        android:paddingTop="10dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="9dp"
                        android:id="@+id/toolbar_left_button"
                        selection_effect='@{"primary_color"}'
                        android:orientation="horizontal"
                        android:layout_centerVertical="true"
                        android:clickable="true"
                        android:focusable="true"
                        android:visibility='@{viewmodel.visibility(viewmodel.leftButtonVisible)}'
                        >
                        <ImageView
                            android:id="@+id/toolbar_left_button_image"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_centerHorizontal="true"
                            android:scaleType="centerInside"
                            android:src="@drawable/ic_lindoor_icon"
                            android:background="@color/transparent"
                           />
                        <TextView
                            android:gravity="bottom"
                            android:id="@+id/toolbar_left_button_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_below="@+id/toolbar_left_button_image"
                            android:textColor="@color/white"
                            style='@{"toolbar_action"}'
                            />
                    </RelativeLayout>

                    <TextView
                        android:gravity="center"
                        android:id="@+id/toolbar_title"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        style='@{"toolbar_title"}'
                        />


                    <RelativeLayout
                        android:layout_width="60dp"
                        android:paddingTop="10dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="9dp"
                        android:id="@+id/toolbar_right_button"
                        selection_effect='@{"primary_color"}'
                        android:orientation="horizontal"
                        android:layout_centerVertical="true"
                        android:clickable="true"
                        android:focusable="true"
                        android:visibility='@{viewmodel.visibility(viewmodel.rightButtonVisible)}'
                        android:layout_alignParentEnd="true"

                        >
                        <ImageView
                            android:id="@+id/toolbar_right_button_image"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/ic_lindoor_icon"
                            android:background="@color/transparent"
                            android:layout_centerHorizontal="true"
                            />
                        <TextView
                            android:gravity="bottom"
                            android:id="@+id/toolbar_right_button_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_below="@+id/toolbar_right_button_image"
                            android:textColor="@color/white"
                            style='@{"toolbar_action"}'
                            />
                    </RelativeLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="4dp"
                        android:background="@color/transparent"
                        android:layout_alignParentBottom="true"
                        visibility="@{viewmodel.activityInprogress ? View.VISIBLE : View.GONE }"
                        >
                        <androidx.core.widget.ContentLoadingProgressBar
                            android:id="@+id/progress"
                            android:background="@color/cardview_dark_background"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                            android:indeterminate="true"
                            android:layout_marginTop="-21dp"
                            android:visibility="visible"
                            />
                    </LinearLayout>

                </RelativeLayout>

            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.AppBarLayout>

        <include layout="@layout/content_main" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
